<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<servlet>
		<servlet-name>role</servlet-name>
		<servlet-class>com.risetek.operation.platform.base.server.RoleServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>role</servlet-name>
		<url-pattern>/oplatform/role</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>user</servlet-name>
		<servlet-class>com.risetek.operation.platform.base.server.UserServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>user</servlet-name>
		<url-pattern>/oplatform/user</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>oplatform/index.html</welcome-file>
	</welcome-file-list>
</web-app>
